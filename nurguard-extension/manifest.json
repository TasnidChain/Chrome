{
  "manifest_version": 3,
  "name": "NurGuard",
  "version": "0.1.0",
  "description": "Protect your light. Block harmful content with intention.",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_title": "NurGuard Active"
  },
  "icons": {
    "128": "icon.png"
  }
}
